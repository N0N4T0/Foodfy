{% extends "layouts/main.njk" %}


{% block head %}
    <title>Receitas - Foodfy</title>

    <link rel="stylesheet" href="/styles/receitas.css"> 
{% endblock %}


{% block content %}
            <a href="/about">
                <h2>Sobre</h2>
            </a>
            <a id="active">
                <h2>Receitas</h2>
            </a>
        </nav>  
    </header>

    <main>
        <section>
            <img src="{{recipe.image}}" alt="Image of {{recipe.title}}">
            <h1>{{recipe.title}}</h1>
            <p>por {{recipe.author}}</p>
        </section>
        
        <div class="ingredientes">
            <h2>Ingredientes</h2>
            <span class="hide">ESCONDER</span>
            <ul>
                {% for ingredient in recipe.ingredients%}
                <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
        </div>
        
        <div class="modo-de-preparo">
            <h2>Modo de Preparo</h2>
            <span class="hide">ESCONDER</span>
            <ul>
                {% for steps in recipe.preparation %}
                <li>{{steps}}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="informacoes-adicionais">
            <h2>Informações adcionais</h2>
            <span class="hide">ESCONDER</span>
            <p>{{recipe.information}}</p>
        </div>
    </main>
         
    <script src="/javascript/script.js"></script>

{% endblock %}