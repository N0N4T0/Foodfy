{% extends "layouts/admin.njk" %}

{% block head %}
    <title>Admin Chefs - Foodfy</title>
{% endblock %}

{% block content %}
    <main>
        <div class="title">
            <h1>Chef: Ricardo Golvea</h1>
            <a class="button"
               href="">
               Editar chef
            </a>
        </div>
        
        <div class="chefPosition">
            <img src="https://images.unsplash.com/photo-1577219491135-ce391730fb2c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=625&q=80" alt="">
            <h1>Ricardo Golvea</h1>
            <h3>4 receitas</h3>
        </div>

        <div class="chefRecipe">
            <h1>Receitas</h1>
        </div>

        <div class="cards-admin">
            
            {% for recipe in recipes %}
            <div class="card-admin" name="{{recipe.title}}">
                <div class="card-admin-img">
                    <img src="{{recipe.image}}" alt="{{recipe.title}}">
                </div>
                <div class="card-admin-text">
                    <h2>{{recipe.title}}</h2>
                    <h3>por {{recipe.author}}</h3>
                    <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                </div>
            </div>
            {% endfor %}
           
        </div>
    </main>
{% endblock content %}
