{% extends "layouts/admin.njk" %}

{% block head %}
    <title>Admin Chefs - Foodfy</title>
{% endblock %}

{% block content %}
    <main>
         <div class="title">
            <h1>Gerenciar chefs</h1>
            <a class="button"
               href="/admin/chefs/create">
               Novo chef
            </a>
        </div>

        <div class="chef-admin-cards">

            {% for chef in chefs %}
            <div class="chefsPosition">
                <div>
                    <img src="{{chef.image}}" alt="Imagem do chef">
                </div>
                <div class="chefsText">
                    <h1>{{chef.name}}</h1>
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
            </div>
            {% endfor %}

        </div>

    </main>
{% endblock content %}
