{% extends "layouts/main.njk" %}


{% block head %}
    <title>{{recipe.title}} - Foodfy</title>

    <link rel="stylesheet" href="/styles/receitas.css">
{% endblock %}


{% block content %}
    <main>
        <section>
            <img src="{{recipe.image}}" alt="Image of {{recipe.title}}">
            <h1>{{recipe.title}}</h1>
            <p>por {{recipe.chef_name}}</p>
        </section>
        
        <div class="recipe-information">
            <div class="ingredientes">
                <h2>Ingredientes</h2>
                <span class="hide">ESCONDER</span>
                <div class="information">
                    <ul>
                        {% for ingredient in recipe.ingredients%}
                        <li>{{ingredient}}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="recipe-information">
            <div class="modo-de-preparo">
                <h2>Modo de Preparo</h2>
                <span class="hide">ESCONDER</span>
                <div class="information">
                    <ul>
                        {% for steps in recipe.preparation %}
                        <li>{{steps}}</li>
                        {% endfor %}
                    </ul>
                </div>    
            </div>
        </div>

        <div class="recipe-information">
            <div class="informacoes-adicionais">
                <h2>Informações adcionais</h2>
                <span class="hide">ESCONDER</span>
                <div class="information">
                    <p>{{recipe.information}}</p>
                </div>
            </div>
        </div>
    </main>
    
    {% include "main/hideShow.njk" %}

    <script src="/javascript/script.js"></script>
{% endblock %}