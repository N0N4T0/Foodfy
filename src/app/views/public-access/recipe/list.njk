{% extends "layouts/main.njk" %}


{% block head %}
    <title>Receitas - Foodfy</title>

    <link rel="stylesheet" href="/styles/receitas.css"> 
{% endblock %}


{% block content %}

    {% if filter %}
        <section class="search-recipes-container">
            <h1>Buscando por "{{filter}}"</h1>
        </section>
    {% endif %}

    {% if recipes.length == 0 %}
        <div class="notfound">
            <p>Nenhuma receita encontrada!</p>
        </div>
    {% endif %}

    <div class="cards">
            
        {% for recipe in recipes %}
            <div class="card" id="{{recipe.id}}" name="{{recipe.title}}">
                    <img src="{{recipe.image}}" alt="{{recipe.title}}">
                    <h2>{{recipe.title}}</h2>
                    <h3>por {{recipe.chef_name}}</h3>
            </div>
        {% endfor %}
           
    </div>

    <div class="modal-overlay">
        <div class="modal">
            <div class="modal-content">
                <div class="card-image">
                    <img class="image-modal" src="" alt="">
                </div>
                <div class="modal-card-title">
                    <p class="title-modal"></p>
                </div>
                <div class="modal-card-info">
                    <p class="info-modal"></p>
                </div>

                 <a href="/recipe/{{recipe.id}}">
                    Ver receita
                </a>

                <div class="close-modal">
                    <a>Fechar modal</a>
                </div>
            </div>

        </div>
    </div>

    




    <div class="pagination" 
            data-page={{pagination.page}}
            data-total={{pagination.total}} 
            data-filter={{filter}}
    ></div>

    <script src="/javascripts/public-access/recipe/list.js"></script>
    <script src="/javascript/script.js"></script>

{% endblock %}