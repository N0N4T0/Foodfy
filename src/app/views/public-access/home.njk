{% extends "layouts/main.njk" %}


{% block head %}
    <title>Foodfy</title>
{% endblock %}


{% block search %}
    <form id="search" action="/recipes" method="get">
        <input 
            type="text" 
            name="filter" 
            placeholder="Buscar uma receita" 
            value="{{filter}}"
        >

        <button type="submit">Buscar</button>
    </form>

{% endblock search %}

{% block content %}
