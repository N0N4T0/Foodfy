{% extends "layouts/admin.njk" %}

{% block head %}
    <title>Admin Users - Foodfy</title>
{% endblock %}

{% block content %}
    <main>
         <div class="title">
            <h1>Bem vindo Diego</h1>
            <a class="button"
               href="/admin/chefs/create">
               Novo chef
            </a>
        </div>

        <div class="chef-admin-cards">

            {% for chef in chefs %}
            <div class="chefsPosition">
                <div>
                    <img src="{{chef.avatar if chef.avatar else '//placehold.it/500x500?text=Sem Avatar'}}" alt="Foto do Chef">
                </div>
                <div class="chefsText">
                    <h1>{{chef.name}}</h1>
                    <h3>{{chef.total_recipes}} receitas</h3>
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
            </div>
            {% endfor %}

        </div>

        {% block pagination%} {% include "parts/pagination.njk" %} {% endblock %}

    </main>
{% endblock content %}
