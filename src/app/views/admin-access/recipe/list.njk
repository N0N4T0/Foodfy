{% extends "layouts/admin.njk" %}

{% block content %}
    <main>
        <div class="title">
            <h2>Gerenciar receitas</h2>

            <a class="button" href="/admin/recipes/create">Nova receita</a>
        </div>

        <div class="cards-admin">
            {% for recipe in recipes %}
                <div class="card-admin" id="{{recipes.indexOf(recipe)}}">
                    <div class="card-admin-img">
                        <img src="{{recipe.image}}" alt="">
                    </div>
                    <div class="card-admin-text">
                        <h2>{{recipe.title}}</h2>
                        <h3>por {{recipe.chef_name}}</h3>

                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>

                </div>
            {% endfor %}
        </div>
    </main>
{% endblock content %}