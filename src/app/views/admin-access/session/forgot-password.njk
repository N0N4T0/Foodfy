{% extends "layouts/session.njk" %}

{% block content %}
    <form class="login-form" action="/admin/users/forgot-password" method="POST">
    
        <h2>Esqueceu a senha?</h2>

        <section class="details">
            <div class="item">
                <div>Email</div>

                <div>
                    <input 
                        type="email" 
                        name="email" 
                        value="{{ user.email }}" 
                        placeholder="Digite seu email para recuperar sua senha"
                    >
                </div>
            </div>
        </section>

        <div class="footer-session recover">
            <button class="button">Recuperar</button>
        </div>

    </form>
    
    <script src="/javascript/script.js"></script>
{% endblock %}