{% extends "layouts/admin.njk" %}

{% block head %}
    <title>Admin Chefs - Foodfy</title>
{% endblock head %}

{% block content %}
    <main>
        <div class="title">
            <h1>Gerenciar chefs</h1>

            {% if sessionIsAdmin.is_admin == true %}
                <a class="button" href="/admin/chefs/create">
                    Novo chef
                </a>
            {% endif %}
        </div>

            <div class="chef-admin-cards">
                {% for chef in chefs %}
                    
                    <div class="chefsPosition">
                        <div>
                            <img src="{{chef.image}}" alt="">
                        </div>
                        <div class="chefsText">
                            <h1>{{chef.name}}</h1>
                            <h3>{{chef.total_recipes}} receitas</h3>
                            
                            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                        </div>
                    </div>

                {% endfor %}
            </div>
        
    </main>

{% endblock content %}