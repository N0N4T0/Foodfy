<div class="item">
    <div>Nome</div>
    <div>
        <input 
            type="text" 
            name="name" 
            value="{{chef.name}}">
    </div>
</div>

<div class="item">
    <div>Avatar</div>
    <div>
        <div id="avatar-upload">
            <input 
                id="avatar-input"
                type="file"
                name="photo"
                multiple
                accept="image/*"
                onchange="AvatarPhotoUpload.handleFileInput(event)"
            >
            <p>Enviar Avatar</p>
        </div>

        <div id="avatar-photo-preview">
            {% if avatars %}
                {% for avatar in avatars%}
                <div class="photo" id="{{avatar.id}}">
                    <img src="{{avatar.src}}" alt="{{avatar.name}}">
                    <i class="material-icons"
                        onclick="PhotosUpload.removeOldPhoto(event)"
                    >
                    close
                    </i>
                </div>
                {% endfor %}
                <input type="hidden" name="removed_files">
            {% endif %}
        </div>
    </div>
</div>